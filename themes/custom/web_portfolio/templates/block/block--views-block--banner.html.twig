{% block content %}

    {% for row in content['#view'].result %}
    
      {% set fileURL = file_url(row._entity.field_download_resume.entity.fileuri) %}
      
      <div class="header-content">
        <h4 class="header-subtitle" >{{ row._entity.field_subtitle.value }}</h4>
        <h1 class="header-title">{{ row._entity.field_name.value }}</h1>
        <h6 class="header-mono" >{{ row._entity.field_work_as.value }}</h6>
        <a class="btn btn-primary btn-rounded" href="{{ fileURL }}" target="_blank">
          <i class="ti-printer pr-2"></i>Download Resume
        </a>
      </div>
     

    {% endfor %}
   
  
{% endblock %}
