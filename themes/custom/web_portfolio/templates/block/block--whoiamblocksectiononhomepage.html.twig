{% block content %}

  {% set fileURL = file_url(content.field_cv['#items'].entity.uri.value) %}
      
  <div class="col-lg-4 about-card">
    <h3 class="font-weight-light">Who am I ?</h3>
    <span class="line mb-5"></span>
    <h5 class="mb-3">{{ content.field_title }}</h5>
    <p class="mt-20">{{ content.body }}</p>
    <a class="btn btn-outline-danger" href="{{ fileURL }}" target="_blank">
      <i class="icon-down-circled2 "></i>Download My CV     
    </a>  
  </div>
       
{% endblock %}
